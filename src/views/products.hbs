<!-- ***** Main Banner Area Start ***** -->
<div class="page-heading" id="top">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="inner-content">
                    <h2>Check Our Products</h2>
                    <span>Awesome &amp; Creative HTML CSS layout by TemplateMo</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ***** Main Banner Area End ***** -->

<!-- ***** Filter Area Starts ***** -->
<section class="filter-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <form action="/products" method="GET" class="filter-form">
                    <div class="row">
                        <!-- Category Filter -->
                        <div class="col-lg-3 col-md-6">
                            <div class="form-group">
                                <label for="category">Category</label>
                                <select id="category" name="category" class="form-control">
                                    <option value="">Select Category</option>
                                    <!-- Dynamically populate categories -->
                                    {{#each categories}}
                                    <option value="{{this}}" {{#if (eq this ../category)}}selected{{/if}}>
                                        {{this}}
                                    </option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>

                        <!-- Brand Filter -->
                        <div class="col-lg-3 col-md-6">
                            <div class="form-group">
                                <label for="brand">Brand</label>
                                <select id="brand" name="brand" class="form-control">
                                    <option value="">Select Brand</option>
                                    <!-- Dynamically populate brands -->
                                    {{#each brands}}
                                    <option value="{{this}}" {{#if (eq this ../brand)}}selected{{/if}}>
                                        {{this}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>

                        <!-- Money Range Filter (Min and Max) -->
                        <div class="col-lg-3 col-md-6">
                            <div class="form-group">
                                <label for="price-range">Price Range</label>
                                <div class="d-flex">
                                    <input type="number" id="min-price" name="minPrice" class="form-control"
                                        placeholder="Min" value="{{minPrice}}" min="0" />
                                    <span class="mx-2">to</span>
                                    <input type="number" id="max-price" name="maxPrice" class="form-control"
                                        placeholder="Max" value="{{maxPrice}}" min="0" />
                                </div>
                            </div>
                        </div>

                        <!-- Rating Filter -->
                        <div class="col-lg-3 col-md-6">
                            <div class="form-group">
                                <label for="rating">Rating</label>
                                <select id="rating" name="rating" class="form-control">
                                    <option value="">Select Rating</option>
                                    <option value="1" {{#if (eq 1 rating)}}selected{{/if}}>1 Star</option>
                                    <option value="2" {{#if (eq 2 rating)}}selected{{/if}}>2 Stars</option>
                                    <option value="3" {{#if (eq 3 rating)}}selected{{/if}}>3 Stars</option>
                                    <option value="4" {{#if (eq 4 rating)}}selected{{/if}}>4 Stars</option>
                                    <option value="5" {{#if (eq 5 rating)}}selected{{/if}}>5 Stars</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <section class="search-area">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-12">

                                    <div class="input-group">
                                        <input type="text" class="form-control" name="q"
                                            placeholder="Search for products..." value="{{searchQuery}}">
                                        <button type="submit" class="btn btn-primary">Search</button>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </section>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- ***** Filter Area Ends ***** -->

<!-- ***** Products Area Starts ***** -->
<section class="section" id="products">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-heading">
                    <h2>{{sectionTitle}}</h2>
                    <span>{{sectionDescription}}</span>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            {{#each products}}
            <div class="col-lg-4">
                <div class="item">
                    <div class="thumb">
                        <div class="hover-content">
                            <ul>
                                <li><a href="/products/{{this._id}}"><i class="fa fa-eye"></i></a></li>
                                <li><a href="/products/{{this._id}}"><i class="fa fa-star"></i></a></li>
                                <li><a href="/products/{{this._id}}"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <img src="{{this.link}}" alt="{{this.name}}">
                    </div>
                    <div class="down-content">
                        <h4>{{this.name}}</h4>
                        <span>{{this.price}}</span>
                        <ul class="stars">
                            {{#times this.rating}}
                            <li><i class="fa fa-star"></i></li>
                            {{/times}}
                        </ul>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
<!-- ***** Products Area Ends ***** -->

<!-- ***** Pagination Area ***** -->
<div class="pagination">
    {{#if (gt currentPage 1)}}
    <a
        href="/products?page={{subtract currentPage 1}}&q={{searchQuery}}&category={{category}}&brand={{brand}}&minPrice={{minPrice}}&maxPrice={{maxPrice}}&rating={{rating}}">Previous</a>
    {{/if}}

    {{#each (range 1 totalPages searchQuery category brand minPrice maxPrice rating)}}
    <a href="/products?page={{this.i}}&q={{this.query}}&category={{this.category}}&brand={{this.brand}}&minPrice={{this.min}}&maxPrice={{this.max}}&rating={{this.rating}}"
        class="{{#if (eq ../currentPage this.i)}}active{{/if}}">{{this.i}}
    </a>
    {{/each}}

    {{#if (lt currentPage totalPages)}}
    <a
        href="/products?page={{add currentPage 1}}&q={{searchQuery}}&category={{category}}&brand={{brand}}&minPrice={{minPrice}}&maxPrice={{maxPrice}}&rating={{rating}}">Next</a>
    {{/if}}
</div>
<!-- ***** Pagination Area ***** -->