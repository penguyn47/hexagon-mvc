<!-- ***** Main Banner Area Start ***** -->
<div class="page-heading" id="top">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="inner-content">
                    <h2>Check Our Products</h2>
                    <span>Awesome &amp; Creative HTML CSS layout by TemplateMo</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ***** Main Banner Area End ***** -->

<!-- ***** Products Area Starts ***** -->
<section class="section" id="products">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-heading">
                    <h2>{{sectionTitle}}</h2>
                    <span>{{sectionDescription}}</span>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            {{#each products}}
            <div class="col-lg-4">
                <div class="item">
                    <div class="thumb">
                        <div class="hover-content">
                            <ul>
                                <li><a href="/products/{{this._id}}"><i class="fa fa-eye"></i></a></li>
                                <li><a href="/products/{{this._id}}"><i class="fa fa-star"></i></a></li>
                                <li><a href="/products/{{this._id}}"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <img src="{{this.link}}" alt="{{this.name}}">
                    </div>
                    <div class="down-content">
                        <h4>{{this.name}}</h4>
                        <span>{{this.price}}</span>
                        <ul class="stars">
                            {{#times this.rating}}
                            <li><i class="fa fa-star"></i></li>
                            {{/times}}
                        </ul>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    <div class="col-lg-12">
        <div class="pagination">
            <ul>
                {{#each pagination}}
                <li class="{{#if this.active}}active{{/if}}">
                    <a href="{{this.link}}">{{this.page}}</a>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
</section>
<!-- ***** Products Area Ends ***** -->

<!-- ***** Pagination Area ***** -->
<div class="pagination">
    {{#if (gt currentPage 1)}}
    <a href="/products?page={{subtract currentPage 1}}">Previous</a>
    {{/if}}

    {{#each (range 1 totalPages)}}
    <a href="/products?page={{this}}" class="{{#if (eq ../currentPage this)}}active{{/if}}">{{this}}
    </a>
    {{/each}}

    {{#if (lt currentPage totalPages)}}
    <a href="/products?page={{add currentPage 1}}">Next</a>
    {{/if}}
</div>
<!-- ***** Pagination Area ***** -->