<!-- ***** Header Area Start ***** -->
<header class="header-area header-sticky">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav class="main-nav">
                    <!-- ***** Logo Start ***** -->
                    <a href="/" class="logo">
                        <img src="/images/logo.png">
                    </a>
                    <!-- ***** Logo End ***** -->
                    <!-- ***** Menu Start ***** -->
                    <ul class="nav">
                        <li class="scroll-to-section"><a href="/" {{#if (eq currentView "home" )}} class="active" {{/if}}>Home</a></li>
                        <li class="scroll-to-section"><a href="/products" {{#if (eq currentView "products" )}} class="active"{{/if}}>Products</a></li>
                        <li class="scroll-to-section"><a href="/about" {{#if (eq currentView "about" )}} class="active"{{/if}}>About</a></li>
