<!-- ***** Main Banner Area Start ***** -->
<div class="page-heading" id="top">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="inner-content">
                    <h2>Single Product Page</h2>
                    <span>Awesome &amp; Creative HTML CSS layout by TemplateMo</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ***** Main Banner Area End ***** -->

<!-- ***** Product Area Starts ***** -->
<style>
.carousel-inner {
    width: 100%;
    height: 600px;
}

.carousel-inner img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}
</style>

<section class="section" id="product">
    <div class="container">
        <div class="row">
            <div id="productCarousel" class="carousel slide col-lg-8" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <!-- Ảnh chính -->
                    <div class="carousel-item active">
                        <img src="{{product.url}}" class="d-block w-100" alt="Main Product Image">
                    </div>
                    <!-- Ảnh phụ -->
                    {{#each product.urls}}
                    <div class="carousel-item">
                        <img src="{{this}}" class="d-block w-100" alt="Product Image">
                    </div>
                    {{/each}}
                </div>
                <!-- Điều khiển qua lại -->
                <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>

            <div class="col-lg-4">
                <div class="right-content">
                    <h4>{{product.productName}}</h4>
                    <span class="price">${{product.price}}</span>
                    <ul class="stars">
                        {{#times product.rating}}
                        <li><i class="fa fa-star"></i></li>
                        {{/times}}
                    </ul>
                    <span>{{product.description}}</span>
                    <div class="quote">
                        <p style="font-size:1.25rem"><b>Category: </b></p>
                        <p>{{product.category}}</p>
                        <p style="font-size:1.25rem"><b>Manufacturer: </b></p>
                        <p>{{product.manufacturer}}</p>
                    </div>
                    <div class="quantity-content">
                        <div class="left-content">
                            <h6>No. of Orders</h6>
                        </div>
                        <div class="right-content">
                            <div class="quantity buttons_added">
                                <input type="button" value="-" class="minus">
                                <input type="number" step="1" min="1" max="" name="quantity" value="1" title="Qty"
                                    class="input-text qty text" size="4">
                                <input type="button" value="+" class="plus">
                            </div>
                        </div>
                    </div>
                    <div class="total">
                        <h4>Total: ${{product.price}}</h4>
                        <div class="main-border-button"><a href="#">Add To Cart</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ***** Product Area Ends ***** -->

<!-- ***** Related Products Area Starts ***** -->
<section class="section" id="related-products">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-heading">
                    <h2>Related Products</h2>
                </div>
                <div class="row">
                    {{#each relatedProducts}}
                    <div class="col-lg-3 col-md-6">
                        <a href="/products/{{this.id}}">
                            <div class="product-item">
                                <div class="product-image">
                                    <img src="{{this.url}}" alt="{{this.name}}">
                                </div>
                                <div class="product-details">
                                    <h5>{{this.productName}}</h5>
                                    <span class="price">${{this.price}}</span>
                                    <div class="stars">
                                        {{#times this.rating}}
                                        <i class="fa fa-star"></i>
                                        {{/times}}
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ***** Related Products Area Ends ***** -->

